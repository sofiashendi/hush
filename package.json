{
  "name": "hush",
  "version": "1.0.0",
  "description": "A custom macOS application to capture speech, convert it to text using a local LLM/STT model, and inject it into the currently focused application.",
  "main": "dist-electron/main.js",
  "scripts": {
    "dist": "vite build && electron-builder",
    "dev": "lsof -ti :34567 | xargs kill -9 || true && vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"electron/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"electron/**/*.ts\"",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.hush.app",
    "productName": "Hush",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist-react/**/*",
      "public/**/*"
    ],
    "artifactName": "${productName}.${ext}",
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    },
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*",
      "node_modules/smart-whisper/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "ffmpeg-static": "^5.3.0",
    "lucide-react": "^0.562.0",
    "motion": "^12.25.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "smart-whisper": "^0.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  }
}
